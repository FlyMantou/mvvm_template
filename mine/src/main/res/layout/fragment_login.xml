<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingStart="@dimen/page_padding_left"
    android:paddingLeft="@dimen/page_padding_left"
    android:paddingTop="@dimen/padding_top_large"
    android:paddingEnd="@dimen/page_padding_right"
    android:paddingRight="@dimen/page_padding_right">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/phone_input_layout"
        style="@style/textInputLayout"
        android:layout_width="327dp"
        app:layout_constraintLeft_toRightOf="@+id/line">

        <cn.magicwindow.ClearEditext
            android:id="@+id/phone_input"
            style="@style/edit.number"
            android:layout_width="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:hint="@string/user_telephone"
            android:textColor="@color/text_gray"/>
    </android.support.design.widget.TextInputLayout>

    <View
        android:id="@+id/line2"
        style="@style/line.edit"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/phone_input_layout"/>

    <TextView
        android:id="@+id/select_country_text"
        style="@style/text.16.gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:paddingLeft="6dp"
        android:paddingTop="2dp"
        android:paddingRight="6dp"
        android:paddingBottom="2dp"
        android:text="+86"
        app:layout_constraintBottom_toTopOf="@id/line2"/>

    <View
        android:id="@+id/line"
        style="@style/line.vertical.gray"
        android:layout_height="25dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@id/line2"
        app:layout_constraintLeft_toRightOf="@id/select_country_text"/>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/password_input_layout"
        style="@style/textInputLayout"
        android:layout_width="0dp"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line2">

        <cn.magicwindow.ClearEditext
            android:id="@+id/password_input"
            style="@style/edit"
            android:layout_width="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:textColor="@color/text_gray"/>
    </android.support.design.widget.TextInputLayout>

    <View
        android:id="@+id/line3"
        style="@style/line.edit"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/password_input_layout"/>

    <TextView
        android:id="@+id/tv_forget_password"
        style="@style/text.14.gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/forget_pwd_signed"
        app:layout_constraintTop_toBottomOf="@id/line3"/>

    <TextView
        android:id="@+id/tv_login_with_verify_code"
        style="@style/text.14.gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_with_verify_code"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_forget_password"
        app:layout_constraintRight_toRightOf="parent"/>

    <LinearLayout
        android:id="@+id/agreement"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="@dimen/page_padding_left"
        android:layout_marginLeft="@dimen/page_padding_left"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/tv_forget_password">

        <CheckBox
            android:id="@+id/agreement_checkbox"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:checked="true"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/agree"
            style="@style/text.14.gray"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/agree"/>

        <TextView
            android:id="@+id/agreement_text"
            style="@style/text.14.gray"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/consent_user_agreement"/>
    </LinearLayout>

    <Button
        android:id="@+id/register_btn"
        style="@style/button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:clickable="false"
        android:text="@string/log_in"
        app:layout_constraintTop_toBottomOf="@+id/agreement"/>


</android.support.constraint.ConstraintLayout>