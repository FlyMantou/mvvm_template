<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingStart="@dimen/page_padding_left"
    android:paddingLeft="@dimen/page_padding_left"
    android:paddingTop="@dimen/padding_top_large"
    android:paddingEnd="@dimen/page_padding_right"
    android:paddingRight="@dimen/page_padding_right">

    <TextView
        android:id="@+id/tv_hint"
        style="@style/text.12.gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:height="40dp"
        android:background="@drawable/shape_gray_round_bg"
        android:gravity="center"
        android:text="密码可使用字母、数字、字符两者组合，限8～20位"
        android:textColor="@color/text_blue"
        app:layout_constraintTop_toTopOf="parent"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout"
        style="@style/textInputLayout"
        android:layout_width="0dp"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_hint">

        <cn.magicwindow.ClearEditext
            android:id="@+id/password_input"
            style="@style/edit"
            android:layout_width="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_14sp"/>
    </android.support.design.widget.TextInputLayout>

    <View
        android:id="@+id/line"
        style="@style/line.edit"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/input_layout"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_again"
        style="@style/textInputLayout"
        android:layout_width="0dp"
        android:layout_marginTop="40dp"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line">

        <cn.magicwindow.ClearEditext
            android:id="@+id/password_input_again"
            style="@style/edit"
            android:layout_width="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:hint="再次输入密码"
            android:inputType="textPassword"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_14sp"/>
    </android.support.design.widget.TextInputLayout>

    <View
        android:id="@+id/line2"
        style="@style/line.edit"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/input_layout_again"/>

    <Button
        android:id="@+id/register_btn"
        style="@style/button"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:clickable="false"
        android:text="@string/log_in"
        app:layout_constraintTop_toBottomOf="@+id/line2"/>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toTopOf="@+id/agreement_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_btn"
        app:layout_constraintVertical_bias="1.0"/>

    <TextView
        android:id="@+id/agreement_text"
        style="@style/text.14.gray"
        android:layout_width="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="20dp"
        android:text="@string/consent_user_agreement"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</android.support.constraint.ConstraintLayout>