<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--底部弹框-->
    <style name="inandoutAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/slide_vertical_top_in</item>
        <item name="android:windowExitAnimation">@anim/slide_vertical_top_out</item>
    </style>

    <style name="DialogTheme" parent="android:style/Theme.Dialog">
        <!-- 是否没有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>